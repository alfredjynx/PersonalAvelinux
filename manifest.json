{
  "manifest_version": 3,
  "name": "Local Storage and Third-Party Connections Viewer",
  "version": "1.1",
  "description": "List all local storage items and third-party connections of the current website.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "webRequest",
    "webRequestBlocking"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
